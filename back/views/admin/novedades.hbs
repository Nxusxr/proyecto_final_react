{{! /back/views/admin/novedades.hbs }}
<div class="container" style="margin-top: 50px;">
    {{!-- fila 1 --}}
    <div class="row">
        <p class="text-end">Hola {{usuario}} ! 
            <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesión <i class="fas fa-sign-out-alt"></i></a>
        </p>
    </div>
    {{!-- fin fila 1 --}}

    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            {{! Link para agregar - M6U1 Paso 2 [cite: 994] }}
            <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
        </div>
    </div>
    {{!-- fin fila 2 --}}

    {{!-- fila 3 - Tabla --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            {{! Botones de acción M6U2 [cite: 2926, 2916] }}
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!-- fin fila 3 --}}
</div>